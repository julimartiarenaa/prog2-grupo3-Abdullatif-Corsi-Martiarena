<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="./images/imgTI.png" />

	<title> Smart Market</title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/style.css">
	<!-- Tipografia -->
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&family=Raleway&display=swap" rel="stylesheet">
	
</head>

<body>
	<!-- Header -->
	<% if (locals.user != undefined ){ %>
		<%- include('./partials/headerLogueado') %>
	<%} else{  %>
		<%- include('./partials/header') %>
	<% } %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de búsqueda</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% if (productos != undefined ){ %>
				<% for(let i = 0; i < productos.length ; i++) { %>

					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/products/id/<%=productos[i].id%>"> <!-- /:id -->
								<figure class="product-box_image">
									<img src=<%= productos[i].url_imagen %> alt=<%= productos[i].nombre %> > 
								</figure>
								<article class="product-box_data">
									<h2><%= productos[i].nombre %></h2>
									<p ><%= productos[i].descripcion %></p>
									Cargado por: <a href="/users/profile/<%= productos[i].usuarios.id %>"><%= productos[i].usuarios.usuario  %></a> 
								
								</article>
							</a>
						</section>
					</div>
	
				<% } %>	
				<%} else{  %>
					<h2>No hay resultados para su criterio de búsqueda</h2>
			<% } %>
			

		</div>
	</div>

	<!-- footer -->
	<%- include('./partials/footer')%>
	<!-- /footer -->
</body>

</html>