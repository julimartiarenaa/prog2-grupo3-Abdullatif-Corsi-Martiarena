<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="./images/logo-mercado-liebre.jpg" />

	<title> Mercado Liebre Argentina</title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/style.css">
	<!-- Tipografia -->
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&family=Raleway&display=swap" rel="stylesheet">
	
</head>
<body>
	<!-- Header -->
	<%- include('./partials/header')%>
	<!-- /Header -->
	
	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title">Nombre del producto</h2> 
			<p class="product-detail-description">
				<a href="product-add">Editar</a> 
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				
                <article class="col-12 col-lg-8 product-detail-info">
                    <img src=<%= productos[0].imagenProducto %> alt=<%= productos[0].nombreProducto %>  class="product-detail-img">
                    <p class="product-detail-description">
                        <%= productos[0].descripcion %> </p>     
                </article>

				<div class="col-12 col-lg-4">
					<section class="comments">

						<% for(let i = 0; i < productos[0].comentarios; i++) { %>    
                            <article>
                                <img src=<%= productos[0].imagenProducto %> alt=<%= productos[0].nombreProducto %> >
                                <div class="data">
                                    <p class="user">
                                        <strong> <a href="profile"> <%= productos[0].comentario[i].comentador %> </a> </strong>
                                        <%= productos[0].comentario[i].comentario %> </p>
                                </div>
                            </article>
                        <% } %>

					</section>
					<!-- FORM DEL MAQUETADO
					<form class="form" action="" method="POST">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					-->
					<form class="login" action="" method="GET"> 

						<label for="nombreUsuario">Nombre de usuario:</label>
						<input type="text" id="nombreUsuario" name="nombreUsuario" value="" required>
						
						<label for="comentario">Comentario:</label>
						<textarea name="comentario" id="comentario" required></textarea>

						<label for="imagenPerfil">Imagen de perfil:</label><br>
						<input type="file" id="imagenPerfil" name="imagenPerfil" required>

						<button type="submit">Enviar comentario</button>

					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<%- include('./partials/footer')%>
	<!-- /footer -->

</body>	
</html>