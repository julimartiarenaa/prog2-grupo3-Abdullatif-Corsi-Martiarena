<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="./images/imgTI.png" />
	
	<title> Smart Market</title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/style.css">
	<!-- Tipografia -->
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&family=Raleway&display=swap" rel="stylesheet">
</head>
<body>
	<!-- header -->
	<% if (locals.user != undefined ){ %>
		<%- include('./partials/headerLogueado') %>
	<%} else{  %>
		<%- include('./partials/header') %>
	<% } %>
	<!-- header -->

	<!-- Banner -->
	<div class="banner">
		<img src="images/img-home-banner.jpg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->

			<!-- acÃ¡ empieza el for que corre todos los productos. EJ: -->

			<% for(let i = 0; i < 8; i++) { %>

				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/<%=[i].id%>"> <!-- /:id -->
							<figure class="product-box_image">
								<img src=<%= productos[i].url_imagen %> alt=<%= productos[i].nombre %> > 
							</figure>
							<article class="product-box_data">
								<h2><%= productos[i].nombre %></h2>
								<!-- <h3><%= productos[i].vendedor_id %></h3> !!! ACA VA EL NOMBRE DEL CREADOR !!! -->
								<p ></p><%= productos[i].descripcion %></p>
							
							</article>
						</a>
					</section>
				</div>

			<% } %>
			
		</div>
	</div>
	<!-- /Novedades -->

	<!-- footer -->
	<%- include('./partials/footer')%>
	<!-- footer -->

</body>	
</html>
